{
  "exclude": ["node_modules", "dist", "src/__tests__"],
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
